@inject DarkModeSwitchService DarkModeService


<MudAppBar Elevation="1" Dense="true">
    <MudIconButton Icon="@Icons.Material.Filled.Menu"
                   Color="Color.Inherit"
                   Edge="Edge.Start"
                   OnClick="@DarkModeService.ToggleDrawer" />

    <MudText Typo="Typo.h6" Class="ml-3">Fakturace</MudText>
    <MudSpacer />

    <MudIconButton Icon="@(DarkModeService.IsDarkMode? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode)"
                   Color="Color.Inherit"
                   OnClick="@DarkModeService.ToggleTheme"
                   Title="@(DarkModeService.IsDarkMode ? "Světlý režim" : "Tmavý režim")" />

    <MudIconButton Icon="@Icons.Material.Filled.Notifications" Color="Color.Inherit" />
</MudAppBar>