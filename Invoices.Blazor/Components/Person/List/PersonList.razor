@using Invoices.Blazor.Components.Infrastructure.Localization
@using Invoices.Blazor.Components.Person.ActionButtons
@inherits LocalizationComponentBase

<MudTable Items="@Items"
          Hover="true"
          Dense="false"
          Bordered="true"
          Striped="true"
          Elevation="1"
          FixedHeader="true"
          Class="person-table">
<ColGroup>
        <col style="width: 60px;" />
        <col style="width: 60%;" />
        <col style="width: 200px;" />
    </ColGroup>
    <HeaderContent>
        <MudTh class="col-id">@T("Id")</MudTh>
        <MudTh class="col-name">@T("Name")</MudTh>
        <MudTh class="col-actions">@T("Actions")</MudTh>
    </HeaderContent>

    <RowTemplate>
        <MudTd class="col-id">@context.PersonId</MudTd>

        <MudTd class="col-name">
            @context.Name
        </MudTd>

        <MudTd class="col-actions">
            <PersonActionButtons PersonModel="@context"
                                 OnEdit="() => OnEdit.InvokeAsync(context)"
                                 OnDelete="() => OnDelete.InvokeAsync(context)"
                                 OnDetail="() => OnDetail.InvokeAsync(context)" />
        </MudTd>
    </RowTemplate>

</MudTable>

